    <style>
        textarea {
            width: 90%;
            height: 50vh;
            margin: 20px;
            margin-top: 8px;
        }

        #title {
            margin: 20px;
            margin-top: 8px;
            margin-bottom: 8px;
            width: 200px;
        }

        label {
            font-size: larger;
            font-family: sans-serif;
            font-weight: bolder;
            margin: 20px;
            margin-top: 8px;
            margin-bottom: 0px;

        }

        #new-post,
        #edits {
            font-weight: bolder;
            font-family: serif;
            text-align: center;
            margin-top: 6px;
        }

        .button {
            display: flex;
            justify-content: center;
            gap: 3px;
        }

        #viewarray-title {
            font-family: serif;
            margin: 20px;
            margin-top: 8px;
            margin-bottom: 8px;
            color: orangered;
            font-weight: bolder;
        }

        #viewarray-content {
            font-family: sans-serif;
            margin: 20px;
            margin-top: 8px;
            margin-bottom: 8px;
        }

        .post-content {
            margin: 20px;
            margin-bottom: 8px;
            width: 90%;
            height: 70vh;
            border: 2px solid black;
            border-radius: 10px;
        }

        #posts {
            font-weight: bold;
            font-family: sans-serif;
            margin: 10px;
            text-align: left;

        }

        .gradient-background {
            background: linear-gradient(300deg, black, #fff, #F3EEEA);
            background-size: 180% 180%;
            animation: gradient-animation 5s ease infinite;
        }

        @keyframes gradient-animation {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
    </style>
</head>

